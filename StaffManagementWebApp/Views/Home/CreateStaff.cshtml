@using StaffManagementWebApp.ViewModels
@model CreateStaffModel
@{
    ViewData["Title"] = "Create staff";
    var listGender = ViewData["ListGender"] as List<IntStringPairObject>;
}
<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="All" class="text-danger"></div>
<form action="/home/createstaff" method="post" autocomplete="off">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Id</label>
                <input class="form-control" asp-for="StaffId" />
            </div>
            <div class="form-group">
                <label class="control-label">Fullname</label>
                <input class="form-control" asp-for="FullName" />
            </div>
            <div class="form-group">
                <label class="control-label">Birthday</label>
                
                <input class="form-control" asp-for="Birthday" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
            </div>
            <div class="form-group">
                <label class="control-label">Gender</label>
                <select class="form-control" name="Gender">
                    @foreach (var gender in listGender)
                    {
                        <option value="@gender.Key">@gender.Value</option>
                    }
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>

</form>
